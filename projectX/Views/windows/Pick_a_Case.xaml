<Window x:Class="projectX.Views.windows.Pick_a_Case"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectX.Views.windows"
        mc:Ignorable="d"
        Title="Pick_a_Case" Height="300" Width="300" >
    <Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="40"/>
				</Grid.RowDefinitions>

				<ListBox x:Name="ListBoxCases" Grid.Row="0">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock FontSize="18" Text="{Binding Name}"></TextBlock>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<StackPanel Orientation="Horizontal" Grid.Row="1">
					<Button IsDefault="True" Click="Accept_click" MinWidth="60" Content="Ok"/>
					<Button IsCancel="True" MinWidth="60" Content="Cancel"/>
				</StackPanel>

			</Grid>
		</ScrollViewer>
    </Grid>
</Window>
